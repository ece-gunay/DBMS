@page
@model DatabaseWebInterface.Pages.Product.CreateModel
@{
}

<br>
<h2>New Product</h2>

@if (Model.errorMessage.Length > 0)
{
    <div class='alert alert-warning alert-dismissible fade show' role='alert'>
        <strong>@Model.errorMessage</strong>
        <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
    </div>
}
<form method="POST">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">ProductName</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="name" value="@Model.productInfo.ProductName">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">ProductPrice</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="price" value="@Model.productInfo.ProductPrice">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">WarehouseCity</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="city" value="@Model.productInfo.WarehouseCity">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">WarehouseDistrict</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="district" value="@Model.productInfo.WarehouseDistrict">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">WarehouseNeighbourhood</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="neighbourhood" value="@Model.productInfo.WarehouseNeighbourhood">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">WarehouseStreet</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="street" value="@Model.productInfo.WarehouseStreet">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">WarehouseBuildingNumber</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="buildingnumber" value="@Model.productInfo.WarehouseBuildingNumber">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">WarehouseApartmentNumber</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="apartmentnumber" value="@Model.productInfo.WarehouseApartmentNumber">
        </div>
    </div>
    @if (Model.successMessage.Length > 0)
    {
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class='alert alert-success alert-dismissible fade show' role='alert'>
                    <strong>@Model.successMessage</strong>
                    <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
                </div>
            </div>
        </div>
    }
    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outlialign-primary" href="/" role="button">Cancel</a>
        </div>
    </div>
</form>